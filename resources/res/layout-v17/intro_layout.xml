<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#222222" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.github.paolorotolo.appintro.AppIntroViewPager android:id="@+id/view_pager" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:gravity="bottom" android:orientation="vertical" android:id="@+id/bottom" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="@dimen/appIntroBottomBarHeight" android:layout_alignParentBottom="true">
        <TextView android:id="@+id/bottom_separator" android:background="#55000000" android:layout_width="match_parent" android:layout_height="1px"/>
        <FrameLayout android:id="@+id/bottomContainer" android:layout_width="match_parent" android:layout_height="match_parent">
            <FrameLayout android:layout_gravity="center" android:id="@+id/indicator_container" android:layout_width="wrap_content" android:layout_height="match_parent" android:layoutDirection="ltr"/>
            <Button android:textColor="@android:color/white" android:layout_gravity="start" android:id="@+id/skip" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="8dp" android:minWidth="100dp" android:text="@string/app_intro_skip_button" android:layout_marginStart="8dp" style="@style/AppIntroButtonStyleCompat"/>
            <ImageButton android:layout_gravity="start" android:id="@+id/back" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="8dp" android:minWidth="100dp" android:layout_marginStart="8dp" app:srcCompat="@drawable/ic_navigate_before_white" style="@style/AppIntroButtonStyleCompat"/>
            <ImageButton android:layout_gravity="end" android:id="@+id/next" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="8dp" android:minWidth="100dp" android:layout_marginEnd="8dp" app:srcCompat="@drawable/ic_navigate_next_white" style="@style/AppIntroButtonStyleCompat"/>
            <Button android:textColor="@android:color/white" android:layout_gravity="end" android:id="@+id/done" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="8dp" android:minWidth="100dp" android:text="@string/app_intro_done_button" android:layout_marginEnd="8dp" style="@style/AppIntroButtonStyleCompat"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
