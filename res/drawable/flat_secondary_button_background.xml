<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/lighterGray" />
            <stroke android:width="2.0dip" android:color="@color/gray" />
            <corners android:radius="8.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorThree" />
            <corners android:radius="8.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorTwo" />
            <stroke android:width="2.0dip" android:color="@color/colorThree" />
            <corners android:radius="8.0dip" />
        </shape>
    </item>
</selector>